@model IEnumerable<WEBCV.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.UserType</td>
                <td>@(user.IsActive ? "Active" : "Inactive")</td>
                <td>
                    <form method="post" asp-controller="Admin" asp-action="ToggleUserStatus" asp-route-id="@user.Id" style="display:inline">
                        <button type="submit" class="btn btn-warning">
                            @(user.IsActive ? "Deactivate" : "Activate")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>